extends base

block vars
	- var title = "Home"

block main-body
	div(class="bg-[#eee] rounded-lg mt-10" style="border: solid 1px #CACED0; min-height: 524px;")
		div(class="sm:w-full text-left m-auto lg:m-0")
			h1(class="text-3xl md:text-4xl pt-5 pl-5 font-bold mb-3") Account Settings
			div(class="flex flex-col md:flex-row-reverse md:items-start")
				div(class="m-10 md:mt-0 md:w-5/12 flex flex-col md:ml-5 border-2 border-[#333] py-3 rounded-[20px]")
					h1(class="text-xl text-center md:text-2xl font-bold mb-3") #{user.name}
					div(class="flex flex-col items-center")
						div(class="w-[100px] h-[100px] rounded-full bg-[#8c52ff]" style="background-image: url('"+user.image+"'); background-size: cover;")
						div(class="px-2 pt-2")
							p(class="mt-2").
								#[span(class="font-medium") Username]: #[span(class="break-all") #{user.username}]
							p(class="mt-2").
								#[span(class="font-medium") Email]: #[span(class="break-all") #{user.email}]
				div(class="md:w-7/12 p-5")
					if error
						div(class="mt-2 py-2 text-red-500").
							#{error}
					form(action="/account" method="post" enctype="multipart/form-data")
						div
							label(for="image" class="block text-sm font-medium leading-8 text-gray-700") Profile Picture
							div(class="mt-1 rounded-md")
								input(type="file" name="image" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5")
						div(class="mt-2")
							label(for="name" class="block text-sm font-medium leading-8 text-gray-700") Name
							div(class="mt-1 rounded-md")
								input(type="text" placeholder="Name" name="name" autofocus="" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5")
						div(class="mt-2")
							label(for="username" class="block text-sm font-medium leading-8 text-gray-700") Username
							div(class="mt-1 rounded-md")
								input(type="text" placeholder="Username" name="username" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5")
						div(class="mt-2")
							label(for="email" class="block text-sm font-medium leading-8 text-gray-700") Email address
							div(class="mt-1 rounded-md")
								input(type="email" placeholder="Email" name="email" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5")
						div(class="md:flex mt-2 gap-2")
							div(class="w-full")
								label(for="password" class="block text-sm font-medium leading-8 text-gray-700") Password
								div(class="mt-1 rounded-md")
									input(type="password" placeholder="Password" name="password" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5")
							div(class="w-full")
								label(for="confirmPassword" class="block text-sm font-medium leading-8 text-gray-700") Confirm Password
								div(class="mt-1 rounded-md")
									input(type="password" placeholder="Confirm Password" name="confirmPassword" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5")
						div(class="mt-2")
							input(type="hidden", name="_csrf", value=csrfToken)
						div(class="mt-10")
							span(class="block w-full rounded-md")
								button(type="submit" class="bg-[#8c52ff] w-full flex justify-center py-2 px-4 border border-transparent text-md font-medium rounded-md text-white focus:outline-none transition duration-150 ease-in-out") Save
						
